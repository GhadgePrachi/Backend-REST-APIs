create table product (
    inventory_id VARCHAR(250),
    sku_id BIGINT,
    image VARCHAR(512),
    additional_image_link VARCHAR(512),
    style_id INT,
    class_id INT,
    color VARCHAR(50),
    color_code INT,
    color_family VARCHAR(50),
    size VARCHAR(10),
    size_id INT,
    department_id INT,
    dissection_code INT,
    hazmat BOOLEAN,
    redline VARCHAR(50),
    promoted BOOLEAN,
    tax_code VARCHAR(50),
    vendor VARCHAR(100),
    list_price DECIMAL(10,2),
    sale_price DECIMAL(10,2),
    sale_price_effective_date DATETIME,
    currency VARCHAR(3),
    shoprunner_eligible BOOLEAN,
    title VARCHAR(100),
    link VARCHAR(512),
    prod_description TEXT,
    start_date DATETIME,
    featured_color VARCHAR(50),
    featured_color_category BOOLEAN,
    related_products VARCHAR(512),
    preorder BOOLEAN,
    handling_code VARCHAR(100),
    video VARCHAR(100),
    proportion VARCHAR(50),
    proportion_products VARCHAR(512),
    master_style VARCHAR(50),
    cannot_return BOOLEAN,
    great_find BOOLEAN,
    web_exclusive BOOLEAN,
    ny_deals BOOLEAN,
    promo_tagline VARCHAR(512),
    partially_promoted BOOLEAN,
    product_category TEXT,
    sort_order VARCHAR(200),
    quantity_sold INT,
    average_rating INT,
    INDEX (inventory_id)
);
